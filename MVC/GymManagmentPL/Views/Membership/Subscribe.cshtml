@model GymManagmentBLL.ViewModels.MembershipViewModel.CreateMembershipViewModel

<div class="container mt-5">
    <div class="card border-0 shadow-sm p-4" style="max-width: 600px; margin: auto;">
        <h4 class="text-primary mb-4">New Subscription</h4>

        <form asp-action="Subscribe" method="post">
            <div class="mb-3">
                <label asp-for="MemberId" class="form-label text-muted small fw-bold">SELECT MEMBER</label>
                <select asp-for="MemberId" class="form-select py-2" asp-items="ViewBag.Members">
                    <option value="">-- Choose Member --</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlanId" class="form-label text-muted small fw-bold">SELECT PLAN</label>
                <select asp-for="PlanId" class="form-select py-2" asp-items="ViewBag.Plans">
                    <option value="">-- Choose Plan --</option>
                </select>
                <span asp-validation-for="PlanId" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="StartDate" class="form-label text-muted small fw-bold">START DATE</label>
                <input asp-for="StartDate" type="date" class="form-control py-2" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4">Activate Plan</button>
            </div>
        </form>
    </div>
</div>