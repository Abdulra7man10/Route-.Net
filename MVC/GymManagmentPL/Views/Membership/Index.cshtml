@model IEnumerable<GymManagmentBLL.ViewModels.MembershipViewModel.MembershipViewModel>

@{
    ViewData["Title"] = "Memberships";
}

<div class="container">
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <h3 class="text-primary fw-bold">Subscriptions</h3>
        <a asp-controller="Membership" asp-action="Subscribe" class="btn btn-fill fw-medium rounded-pill px-4 py-2">
            + New Subscription
        </a>
    </header>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-borderless align-middle">
                <thead>
                    <tr>
                        <th>Member Name</th>
                        <th>Plan</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.MemberName</td>
                            <td><span class="badge bg-light text-dark border">@item.PlanName</span></td>
                            <td>@item.StartDate</td>
                            <td>@item.EndDate</td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="text-success"><i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i> Active</span>
                                }
                                else
                                {
                                    <span class="text-muted">@item.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-link p-0 border-0" type="button" data-bs-toggle="dropdown">
                                        <img src="~/images/action dots.jpg" alt="action icon" />
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Membership" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="bi bi-info-circle"></i> View Details
                                            </a>
                                        </li>
                                        @* <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Membership" asp-action="Cancel" asp-route-id="@item.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <button type="button" class="dropdown-item text-danger d-flex align-items-center gap-2"
                                                        onclick="if(confirm('Are you sure?')) { document.getElementById('cancelForm-@item.Id').submit(); }">
                                                    <span>Cancel Subscription</span>
                                                </button>
                                            </form>
                                        </li> *@
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4 class="text-muted">No active memberships found.</h4>
        </div>
    }
</div>